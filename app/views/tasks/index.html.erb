<div class="container">
  <div class="col-xs-12">
    <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck1">
        <label class="custom-control-label" for="customCheck1"><%= link_to task[:title], task_path(task) %></label>
      </div>
    <% end %>
    <%= link_to new_task_path do %>
      <i class="fa fa-plus-square"></i>
    <% end %>
  </div>
</div>
